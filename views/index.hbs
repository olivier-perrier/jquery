{{> header}}

<div class="container py-5">

    <div class="text-center bg-light mb-3">
        <div class="row">
            <div class="col-md-4">
                {{#if mainPost.image}}
                <img src="/medias/{{mainPost.image}}" alt="Card image cap" class="rounded" width="100%" height="300">
                {{else}}
                <img src="/medias/post-default.jpg" alt="Card image cap" class="rounded" width="100%" height="300">
                {{/if}}
            </div>
            <div class="col-md-8">
                <div class="p-lg-5 mx-auto">
                    <h1 class="">{{mainPost.title}}</h1>
                    <p class="lead font-weight-normal">{{mainPost.contentPreview}}</p>
                    <a class="btn btn-outline-secondary" href="/posts/{{mainPost._id}}">Read more</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">

        {{#posts}}
        <div class="col-md-6">
            <div class="row mb-2">
                <div class="col-4 pr-0">
                    <img src="/medias/{{image}}" alt="Card image cap" class="rounded" width="100%" height="150">
                </div>
                <div class="col-8 bg-dark p-md-3">
                    <div class=" text-center text-white">
                        <h2><a href="/post/{{_id}}" class="text-white">{{title}}</a></h2>
                        <p class="lead">{{contentPreview}}</p>
                    </div>
                </div>
            </div>
        </div>
        {{/posts}}

    </div>

</div>

